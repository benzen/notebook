extends ../layout
append head
  script(src='/views/editClass.js')
block content
  form.studentList
    table
      tr
        td= t("Group")+":"
        td
          input(type="text", value="#{group}").group
        td= t("Year")+":"
        td
          input(type="number", value="#{year}").year
    .button
      a(href="#").addStudentButton=t("Add student")
    table.studentList
      tr
        th= t("Firstname")
        th= t("Lastname")
        th= t("Birthday")
        th= t("Father name")
        th= t("Mother name")
        th= t("Telephone")
        th= t("Notes")
      each student in students
        tr
          td 
            input(value="#{student.firstname}").firstname
          td
            input(value="#{student.lastname}").lastname
          td
            input(value="#{student.birthday}").birthday
          td
            input(value="#{student.fatherName}").fatherName
          td
            input(value="#{student.motherName}").motherName
          td 
            input(value="#{student.telephone}").telephone
          td
            input(value="#{student.notes}").notes
      .button
        a(href="#").saveClassButton= t("Save class")
