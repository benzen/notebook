extends layout
block content
  .classTitle Group: #{group}  Year: #{year} 
    a.edit(href="#") edit
    a.delete(href="#") delete
  .students
    table
      each student in students
        tr 
          td #{student.firstname} 
          td #{student.lastname}
          td #{student.fatherName}
          td #{student.motherName}
          td #{student.birthday}
          td #{student.telephoneNumber}
          td #{student.notes}
